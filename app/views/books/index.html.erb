<p style="color: green"><%= notice %></p>

<h1>Books</h1>

<div id="books">
  <table>
    <th>Title</th>
    <th>Author</th>
    <th>Date Release</th>
    <th>Aksi</th>
    <% @books.each do |book| %>
      <tr>
        <%= render book %>
        <td><%= link_to "Show this book", book %></td>
      </tr>
    <% end %>
  </table>
</div>

<%= link_to "New book", new_book_path %>
